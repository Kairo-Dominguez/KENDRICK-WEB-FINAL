    <!-- Heading -->
    <h1 class="scroll-effect">Kendrick Lamar's Gallery</h1>
    <!-- Horizontal Gallery Container with images -->
    <div class="gallery-container">
      <!-- Image 1 -->
      <div class="gallery-image-container scroll-effect">
        <img class="gallery-image" src="https://i.pinimg.com/564x/53/fa/1a/53fa1a3f5b48ee3789f3587b24595b20.jpg" alt="Kendrick Lamar Image 1">
        <img class="thorn-crown" src="https://u.cubeupload.com/orilin_2024/download.png" alt="Thorn Crown">
      </div>

      <!-- Image 2 -->
      <div class="gallery-image-container scroll-effect">
        <img class="gallery-image" src="https://i.pinimg.com/736x/89/b0/f4/89b0f4407bdce9ba7f34773e5d2c210c.jpg" alt="Kendrick Lamar Image 2">
        <img class="thorn-crown" src="https://u.cubeupload.com/orilin_2024/download.png" alt="Thorn Crown">
      </div>

      <!-- Image 3 -->
